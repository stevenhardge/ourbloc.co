<div class="comment clearfix">
	<div class="comment_content">
		<p class="comment_body"><%= comment.name %></p>
    <%= image_tag comment.image.url(:thumb) %>
    <div> Likes: <%= comment.likers(User).count %></div>
		<p class="comment_time"><%= time_ago_in_words(comment.created_at) %> Ago</p>
	</div>
	
	<% if user_signed_in? %>
    <p><%= link_to 'Like', like_post_comment_path(@post, comment, anchor: comment.id), class: "button" %></p>
		<p><%= link_to 'Delete', [comment.post, comment], 
									method: :delete, 
									class: "button", 
									data: { confirm: 'Are you sure?' } %></p>
	<% end %>
</div>
